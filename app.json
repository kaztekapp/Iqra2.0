{
  "expo": {
    "name": "IQra2.0",
    "slug": "iqra2",
    "version": "1.0.0",
    "description": "IQra2.0 â€” Learn Arabic & Quran. Master the Arabic alphabet, build vocabulary, study Quran with audio recitations, and practice prayer.",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "iqra2",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.iqra2.app",
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ],
        "NSSpeechRecognitionUsageDescription": "IQra2.0 uses speech recognition to check your Arabic pronunciation during speaking practice.",
        "NSMicrophoneUsageDescription": "IQra2.0 uses the microphone to record your voice during pronunciation practice.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "package": "com.iqra2.app",
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-audio",
      "expo-speech-recognition",
      "expo-localization",
      "expo-navigation-bar"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "f639ca75-6743-41f7-a5f6-ea439df68672"
      }
    },
    "owner": "kaztek",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/f639ca75-6743-41f7-a5f6-ea439df68672"
    }
  }
}
